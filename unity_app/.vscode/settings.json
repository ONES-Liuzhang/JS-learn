{
  /*************************************************************************
   *******************常用配置**************************************
   *************************************************************************/
  "editor.fontSize": 14,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "files.eol": "\n", // 默认的行尾字符
  "files.exclude": { // 设置项目中不显示的文件
    // "**/dist": true
    "package-lock.json": true,
    "yarn-error.json": true,
  },
  "files.associations": {
    "*.ts": ["typescript"],
    "*.tsx": ["typescriptreact"],
    "*.js": ["javascriptreact"],
    "*.jsx": ["javascriptreact"]
  },

  "editor.suggest.insertMode": "replace",
  "files.insertFinalNewline": true, // 文件的行尾插入一行
  /*************************************************************************
   *******************工作台**************************************
   *************************************************************************/
  "workbench.colorCustomizations": {},
  // "workbench.iconTheme": "vscode-icons",
  "workbench.view.alwaysShowHeaderActions": true,

  /*************************************************************************
   *******************扩展**************************************
   *************************************************************************/
  "gulp.autoDetect": "off", // gulp
  "auto-close-tag.activationOnLanguage": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "markdown",
    "vue",
    "HTML (Eex)"
  ],
  "auto-close-tag.excludedTags": [
    "router-view",
    "area",
    "br",
    "hr",
    "img",
    "input",
    "link",
    "meta"
  ],
  "beautify.language": {
    "js": {
      "type": ["typescript", "javascript", "json", "jsonc"],
      "filename": [".jshintrc", ".jsbeautifyrc"]
    },
    "css": ["css", "less", "scss"],
    "html": ["htm", "html"]
  },
  // 拼写检查
  "cSpell.allowCompoundWords": true, // 允许合成词
  "cSpell.words": [
    "Avenir",
    "Cascader",
    "antd",
    "antdv",
    "devtool",
    "echarts",
    "eqeqeq",
    "esnext",
    "etbank",
    "jspdf",
    "orgs",
    "rogen",
    "styl",
    "vnode",
    "vuejs",
    "vuepress",
    "vuex"
  ],
  /////
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // "typescript.tsdk": "node_modules/typescript/lib",
  "search.exclude": {
    "**/node_modules": false
  },
  "javascript.implicitProjectConfig.experimentalDecorators": true,


  // eslint 
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
  ],
  "beautify.config": {
    "brace_style": "collapse,preserve-inline",
    "indent_size": 2,
    "indent_char": " ",
    "jslint_happy": true,
    "unformatted": [""],
    "css": {
      "indent_size": 2
    }

  },
  // 代码美化
  // "prettier.arrowParens": "always",
  // "prettier.semi": false,
  // "prettier.singleQuote": true,
  // "prettier.proseWrap": "preserve", // 默认值。因为使用了一些折行敏感型的渲染器（如GitHub comment）而按照markdown文本样式进行折行
  // "prettier.bracketSpacing": true, // 在对象，数组括号与文字之间加空格 "{ foo: bar }"
  // "prettier.endOfLine": "auto", // 结尾是 \n \r \n\r auto
  // "prettier.jsxBracketSameLine": false, // 在jsx中把'>' 是否单独放一行
  // "prettier.jsxSingleQuote": false, // 在jsx中使用单引号代替双引号
  // "prettier.eslintIntegration": true,
  // "prettier.stylelintIntegration": false, //不让prettier使用stylelint的代码格式进行校验


  // "prettier.printWidth": 100,
  // "prettier.trailingComma": "es5",
  // "prettier.useEditorConfig": false,
  "typescript.tsdk": "node_modules/typescript/lib",

  // "prettier-eslint": true,
  // auto import 插件
  "autoimport.absolute": true,
  "autoimport.showNotifications": true,
  "autoimport.semicolon": false,
  // 书签 
  "bookmarks.navigateThroughAllFiles": true,
  "bookmarks.saveBookmarksInProject": true,
  // TODO hightlight
  "todohighlight.isEnable": true,
  "todohighlight.isCaseSensitive": true,
  "todohighlight.keywords": [
    "DEBUG:",
    "REVIEW:",
    {
      "text": "NOTE:",
      "color": "red",
      "backgroundColor": "green",
      "overviewRulerColor": "grey"
    },
    {
      "text": "TODO:",
      "color": "#000",
      "backgroundColor": "yellow",
      //other styling properties goes here ... 
    }
  ],
  "editor.find.seedSearchStringFromSelection": false,

  "javascript.autoClosingTags": true,
  "markdownlint.customRules": [
    "MD001"
  ],
  "markdownlint.run": "onSave",

  // typescript 插件
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
  "typescript.format.semicolons": "remove",
  "typescript.locale": "zh-CN",
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.quoteStyle": "single",
  "typescript.referencesCodeLens.enabled": true,
  "typescript.referencesCodeLens.showOnAllFunctions": true,
  "typescript.suggest.autoImports": false,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "editor.formatOnSave": true,

}
